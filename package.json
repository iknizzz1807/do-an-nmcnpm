{
	"name": "do-an-nmcnpm",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"dev-resetdb": "npm run push:db && vite dev",
		"dev-seeddb": "npm run seed:db && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate:db": "drizzle-kit generate --config=src/lib/server/db/drizzle.config.ts",
		"push:db": "drizzle-kit push --config=src/lib/server/db/drizzle.config.ts && npm run createTrigger:db",
		"createTrigger:db": "tsx src/lib/server/db/dbTriggers.ts",
		"migrate:db": "tsx src/lib/server/db/migrate.ts",
		"studio:db": "drizzle-kit studio --port 300 --verbose --config=src/lib/server/db/drizzle.config.ts",
		"seed:db": "npm run push:db && tsx src/lib/server/db/seed.ts",
		"sandbox:db": "tsx src/lib/server/db/sandbox.ts",
		"setAdminPassword": "tsx src/lib/server/setAdminPassword.ts"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"@types/dateformat": "^5.0.3",
		"drizzle-kit": "^0.30.4",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"argon2": "^0.41.1",
		"better-sqlite3": "^11.8.1",
		"dateformat": "^5.0.3",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.39.3",
		"drizzle-seed": "^0.3.1",
		"toastify-js": "^1.12.0",
		"uuid": "^11.1.0"
	}
}
